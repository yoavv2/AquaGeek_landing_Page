---
interface Props {}

const benefits = [
    {
        icon: "🔧",
        title: "תחזוקה מקצועית",
        description: "שירות מקיף לאקווריומים ובריכות נוי מכל הסוגים והגדלים"
    },
    {
        icon: "⭐",
        title: "מוצרים איכותיים",
        description: "ציוד ואביזרים מהמותגים המובילים בעולם"
    },
    {
        icon: "💡",
        title: "ייעוץ אישי",
        description: "ליווי מקצועי והדרכה מותאמת אישית לכל פרויקט"
    },
    {
        icon: "🚚",
        title: "משלוח מהיר",
        description: "שירות משלוחים לכל חלקי הארץ"
    },
    {
        icon: "🌿",
        title: "שדרוג חוויית הלקוח",
        description: "אקווריומים ובריכות נוי שמעניקים למשרדים, מסעדות וקליניקות אווירה ייחודית ומרשימה"
    }
];
---

<section class="benefits">
    <div class="container">
        <h2>למה לבחור ב'אקווה גיק'?</h2>
        <div class="benefits-grid">
            {benefits.map(benefit => (
                <div class="benefit-card">
                    <div class="icon">{benefit.icon}</div>
                    <h3>{benefit.title}</h3>
                    <p>{benefit.description}</p>
                </div>
            ))}
        </div>
    </div>
</section>

<style>
    .benefits {
        padding: 5rem 0;
        background-color: var(--background-alt);
        direction: rtl;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1rem;
    }

    h2 {
        text-align: center;
        color: var(--primary-dark);
        font-size: 2.5rem;
        margin-bottom: 3rem;
    }

    .benefits-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(25px, 1fr));
        gap: 2rem;
    }

    .benefit-card {
        background: white;
        padding: 2rem;
        border-radius: 1rem;
        text-align: center;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
    }

    .benefit-card:hover {
        transform: translateY(-5px);
    }

    .icon {
        font-size: 2.5rem;
        margin-bottom: 1rem;
    }

    h3 {
        color: var(--primary-dark);
        font-size: 1.25rem;
        margin-bottom: 1rem;
    }

    p {
        color: var(--text);
        line-height: 1.6;
    }

    @media (max-width: 768px) {
        .benefits {
            padding: 3rem 0;
        }

        h2 {
            font-size: 2rem;
            margin-bottom: 2rem;
        }

        .benefits-grid {
            grid-template-columns: 1fr;
            gap: 1.5rem;
        }
    }
</style>
